{
    // ABOUTME: Default settings for AutoSaveWithAI Sublime Text plugin
    // ABOUTME: Configure save directory, OpenAI-compatible API endpoint, and auto-save behavior

    // Directory where auto-saved files will be stored
    // Use absolute path or ~/ for home directory
    "save_directory": "~/Documents/auto-notes",

    // LLM model to use for filename generation
    // Examples:
    //   OpenAI: "gpt-4o", "gpt-4-turbo", "gpt-3.5-turbo", "gpt-4.1-mini"
    //   Any OpenAI-compatible endpoint: use model name as specified by provider
    "llm_model": "gpt-3.5-turbo",

    // API base URL for OpenAI-compatible endpoints
    // Default: "https://api.openai.com/v1"
    // Other examples:
    //   Azure OpenAI: "https://YOUR-RESOURCE.openai.azure.com/openai/v1"
    //   Custom proxy: "https://your-proxy.com/v1"
    "api_base": "https://api.openai.com/v1",

    // API type to use: "chat" or "responses"
    // "chat" uses /v1/chat/completions (widely supported, recommended default)
    // "responses" uses /v1/responses (newer API, may not be supported by all providers)
    "api_type": "chat",

    // API keys for different providers
    // For OpenAI models (gpt-*), set openai_api_key
    // For Anthropic models (anthropic/*), set anthropic_api_key
    // For other providers, set api_key
    "openai_api_key": "",
    "anthropic_api_key": "",
    "api_key": "",

    // Authentication header configuration
    // OpenAI-style: auth_header_name="Authorization", auth_header_prefix="Bearer "
    // Azure-style: auth_header_name="api-key", auth_header_prefix=""
    "auth_header_name": "Authorization",
    "auth_header_prefix": "Bearer ",

    // Whether to intercept default save (Ctrl+S/Cmd+S) for unsaved files
    // When true, pressing save on an untitled file will trigger AI naming
    "overwrite_default_save": false,

    // Auto-save timer in seconds
    // Set to 0 to disable timer-based auto-save
    // If > 0, unsaved files will be auto-saved after this many seconds of inactivity
    "auto_save_timer": 0,

    // Prompt template for filename generation
    // {content} will be replaced with the first 250 words of the file
    "prompt_template": "Based on the following text, suggest a short, descriptive filename. Include an appropriate file extension (.txt, .md, .json, .py, etc.) based on the content type. Respond with ONLY the filename, nothing else.\n\nText: {content}"
}
